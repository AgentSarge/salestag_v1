---
import PageLayout from '~/layouts/PageLayout.astro';
import SeoMeta from '~/components/common/SeoMeta.astro';
import Hero from '~/components/widgets/Hero.astro';
import Features2 from '~/components/widgets/Features2.astro';
import Stats from '~/components/widgets/Stats.astro';
import Content from '~/components/widgets/Content.astro';
import CallToAction from '~/components/widgets/CallToAction.astro';

import defaultImage from '~/assets/images/default.png';

const metadata = {
  title: 'SalesTag Changelog – Product Updates & Version History',
};

const changelogSchemaData = {
  releases: [
    {
      "@type": "CreativeWork",
      "name": "SalesTag v1.0.0",
      "description": "Initial public launch with core conversation capture, AI tagging, and analytics capabilities",
      "datePublished": "2025-07-12",
      "author": {
        "@type": "Organization",
        "name": "SalesTag"
      },
      "about": {
        "@type": "SoftwareApplication",
        "name": "SalesTag",
        "applicationCategory": "Sales Analytics Software"
      }
    }
  ]
};
---

<SeoMeta 
  title="SalesTag Changelog – Product Updates & Version History"
  description="Track SalesTag's development progress and feature updates. View complete version history and release notes for our AI sales intelligence platform."
  url="https://salestag.io/changelog"
  image="/og/changelog.jpg"
  schemaType="CreativeWorkSeries"
  schemaData={changelogSchemaData}
/>

<PageLayout metadata={metadata}>
  <!-- Hero Widget ******************* -->
  <Hero
    tagline="Product Updates"
    actions={[
      {
        variant: 'primary',
        text: 'Latest Release',
        href: '#latest',
        icon: 'tabler:telescope',
      },
      { text: 'Coming Soon', href: '#upcoming' },
    ]}
    image={{
      src: defaultImage,
      alt: 'SalesTag Product Development Timeline',
    }}
  >
    <Fragment slot="title">
      📜 SalesTag <br />
      <span class="text-accent dark:text-white">Changelog</span>
    </Fragment>

    <Fragment slot="subtitle">
      Stay updated with the latest features, improvements, and fixes. Track our journey from concept to the leading AI-powered sales intelligence platform.
    </Fragment>
  </Hero>

  <!-- Content Widget **************** -->
  <Content
    id="latest"
    title="Latest Release: v1.0.0"
    subtitle="July 12, 2025 - Initial Public Launch"
    isReversed
    items={[
      {
        title: '🎉 Public Launch',
        description: 'The first public release of SalesTag, featuring core conversation capture, AI tagging, and analytics capabilities.',
      },
      {
        title: '✨ Core Features',
        description: 'SalesTag Vault, live metrics dashboard, responsive waitlist system, and global CTA conversion tracking.',
      },
      {
        title: '🛠️ Technical Foundation',
        description: 'Full dark mode support, JSON-LD schema optimization, Astro static generation, and mobile-responsive design.',
      },
    ]}
    image={{
      src: defaultImage,
      alt: 'SalesTag v1.0.0 Launch',
    }}
  >
    <Fragment slot="content">
      <div class="inline-flex items-center px-3 py-1 rounded-full text-sm font-medium bg-blue-600 text-white mb-4">
        v1.0.0 - Current Release
      </div>
      <h3 class="text-2xl font-bold tracking-tight dark:text-white sm:text-3xl mb-2">
        🎉 Initial Public Launch
      </h3>
    </Fragment>

    <Fragment slot="bg">
      <div class="absolute inset-0 bg-gradient-to-r from-blue-50 to-blue-100 dark:from-blue-900/30 dark:to-blue-800/30"></div>
    </Fragment>
  </Content>

  <!-- Features2 Widget ************** -->
  <Features2
    title="v1.0.0 Feature Highlights"
    subtitle="What's included in our inaugural release"
    columns={2}
    items={[
      {
        title: 'SalesTag Vault',
        description: 'Secure, encrypted storage for all conversation data with enterprise-grade compliance and future AI training capabilities.',
        icon: 'tabler:database',
      },
      {
        title: 'Live Metrics Dashboard',
        description: 'Real-time analytics powered by Supabase, providing instant insights into team performance and conversation patterns.',
        icon: 'tabler:dashboard',
      },
      {
        title: 'Intelligent Waitlist System',
        description: 'Responsive subscription forms with automated follow-up and early access program management.',
        icon: 'tabler:users',
      },
      {
        title: 'Global CTA System',
        description: 'Comprehensive conversion tracking and optimization across all customer touchpoints and user journeys.',
        icon: 'tabler:target',
      },
      {
        title: 'Dark Mode Support',
        description: 'Complete dark/light theme system built with Tailwind CSS for optimal user experience across devices.',
        icon: 'tabler:moon',
      },
      {
        title: 'SEO Optimization',
        description: 'Advanced JSON-LD schema implementation, meta tags, and search engine optimization for maximum visibility.',
        icon: 'tabler:search',
      },
    ]}
  />

  <!-- Stats Widget ****************** -->
  <Stats
    title="Launch Stats"
    subtitle="By the numbers - our initial release"
    stats={[
      { amount: '13', title: 'Pages Launched' },
      { amount: '4', title: 'Schema Types' },
      { amount: '100%', title: 'SEO Coverage' },
      { amount: '95%', title: 'Launch Ready' },
    ]}
  />

  <!-- Features2 Widget ************** -->
  <Features2
    id="upcoming"
    title="Coming Next"
    subtitle="Preview of upcoming features and improvements"
    columns={3}
    items={[
      {
        title: 'Mobile App',
        description: 'Native iOS and Android apps for badge management and real-time conversation insights.',
        icon: 'tabler:device-mobile',
      },
      {
        title: 'Advanced AI Models',
        description: 'Industry-specific AI training and enhanced objection detection for better coaching insights.',
        icon: 'tabler:brain',
      },
      {
        title: 'CRM Integrations',
        description: 'Native connections to Salesforce, HubSpot, and other popular sales platforms.',
        icon: 'tabler:plug',
      },
      {
        title: 'Team Analytics',
        description: 'Advanced team performance metrics and comparative analysis across sales representatives.',
        icon: 'tabler:chart-line',
      },
      {
        title: 'Real-time Coaching',
        description: 'Live conversation coaching with instant feedback and objection handling suggestions.',
        icon: 'tabler:headset',
      },
      {
        title: 'API Access',
        description: 'Developer API for custom integrations and workflow automation with external systems.',
        icon: 'tabler:code',
      },
    ]}
  />

  <!-- Content Widget **************** -->
  <Content
    isAfterContent
    items={[
      {
        title: 'Release Feedback',
        description: 'Experiencing issues or have suggestions? We\'d love to hear from early users and beta testers.',
      },
      {
        title: 'Community Updates',
        description: 'Join our community to stay informed about new features, best practices, and upcoming releases.',
      },
      {
        title: 'Future Roadmap',
        description: 'Check our detailed roadmap to see what\'s coming next and how we\'re building the future of sales AI.',
      },
    ]}
    image={{
      src: defaultImage,
      alt: 'SalesTag Community and Feedback',
    }}
  >
    <Fragment slot="content">
      <h3 class="text-2xl font-bold tracking-tight dark:text-white sm:text-3xl mb-2">
        💭 Release Feedback
      </h3>
    </Fragment>

    <Fragment slot="bg">
      <div class="absolute inset-0 bg-gradient-to-r from-gray-50 to-gray-100 dark:from-gray-800 dark:to-gray-700"></div>
    </Fragment>
  </Content>

  <!-- CallToAction Widget *********** -->
  <CallToAction
    title="Ready to Experience SalesTag?"
    subtitle="Join forward-thinking sales teams who are already transforming their conversations into valuable insights."
    actions={[
      {
        variant: 'primary',
        text: 'Get Early Access',
        href: '/subscribe',
      },
      {
        variant: 'secondary',
        text: 'View Roadmap',
        href: '/roadmap',
      },
    ]}
  />
</PageLayout> 