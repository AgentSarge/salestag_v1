---
import PageLayout from '~/layouts/PageLayout.astro';
import SeoMeta from '~/components/common/SeoMeta.astro';
import Hero from '~/components/widgets/Hero.astro';
import Features from '~/components/widgets/Features.astro';
import Content from '~/components/widgets/Content.astro';
import Stats from '~/components/widgets/Stats.astro';
import Testimonials from '~/components/widgets/Testimonials.astro';
import CallToAction from '~/components/widgets/CallToAction.astro';

import heroImage from '~/assets/images/hero-image.png';
import defaultImage from '~/assets/images/default.png';

const metadata = {
  title: 'SalesTag — AI Sales Memory, Built for Field Teams',
  ignoreTitleTemplate: true,
};
---

<SeoMeta 
  title="SalesTag — AI Sales Memory, Built for Field Teams"
  description="SalesTag captures, tags, and stores real sales conversations using wearable badges and LLMs. Transform door-to-door pitches into valuable coaching data and AGI-ready training material."
  url="https://salestag.io/"
  image="/og/home.jpg"
  schemaType="WebSite"
/>

<PageLayout metadata={metadata}>
  <!-- Hero Widget ******************* -->
  <Hero
    tagline="AI Sales Memory"
    actions={[
      {
        variant: 'primary',
        text: 'See Features',
        href: '#features',
        icon: 'tabler:rocket',
      },
      { text: 'Watch Demo', href: '/demo' },
    ]}
    image={{
      src: heroImage,
      alt: 'SalesTag AI Sales Intelligence Platform',
    }}
  >
    <Fragment slot="title">
      AI Sales Memory, <br />
      Built for <span class="text-accent dark:text-white">Field Teams</span>
    </Fragment>

    <Fragment slot="subtitle">
      <span class="hidden sm:inline">
        <span class="font-semibold">SalesTag</span> captures, tags, and stores real sales conversations using wearable badges and LLMs.</span>
      Transform every door-to-door pitch into valuable coaching data and AGI-ready training material.
    </Fragment>
  </Hero>

  <!-- Features Widget *************** -->
  <Features
    id="features"
    title="Why SalesTag?"
    subtitle="Transform your field sales with AI-powered conversation intelligence."
    items={[
      {
        title: 'Smart Audio Capture',
        description:
          'Hands-free recording through wearable badges. Capture every conversation without interrupting your natural sales flow.',
        icon: 'tabler:microphone',
      },
      {
        title: 'AI-Powered Tagging',
        description:
          'Automatically detect objections, pain points, and buying signals. Let AI identify the moments that matter most.',
        icon: 'tabler:tags',
      },
      {
        title: 'Performance Insights',
        description:
          'Transform conversations into coaching data. Track what works, identify improvement areas, and scale your best performers.',
        icon: 'tabler:chart-line',
      },
      {
        title: 'Real-time Coaching',
        description:
          'Get instant feedback during calls. Our AI provides live suggestions to help reps navigate objections and close deals.',
        icon: 'tabler:users',
      },
      {
        title: 'Secure Data Vault',
        description:
          'All conversations stored securely with enterprise-grade encryption. Perfect for compliance and future AI training.',
        icon: 'tabler:shield-lock',
      },
      {
        title: 'Industry Specialized',
        description:
          'Tailored for high-trust verticals like solar, roofing, and security. Built by field sales experts who understand your challenges.',
        icon: 'tabler:building',
      },
    ]}
  />

  <!-- Content Widget **************** -->
  <Content
    title="Built for the Frontlines"
    subtitle="SalesTag isn't just theory — it's deployed in high-stakes, face-to-face sales environments across industries."
    isReversed
    items={[
      {
        title: 'Solar Sales Revolution',
        description:
          'Capture door-to-door solar consultations and in-home closes. Label critical sales moments and feed data back into AI-powered training loops.',
      },
      {
        title: 'Real Results',
        description: 
          'Sales teams using SalesTag see 23% improvement in close rates within 90 days. Turn every conversation into a learning opportunity.',
      },
    ]}
    image={{
      src: heroImage,
      alt: 'SalesTag in action - field sales team',
    }}
  >
    <Fragment slot="content">
      <h3 class="text-2xl font-bold tracking-tight dark:text-white sm:text-3xl mb-2">
        From Conversation to <br /><span class="text-2xl">Conversion Intelligence</span>
      </h3>
    </Fragment>

    <Fragment slot="bg">
      <div class="absolute inset-0 bg-blue-50 dark:bg-transparent"></div>
    </Fragment>
  </Content>

  <!-- Stats Widget ****************** -->
  <Stats
    title="Proven Results"
    subtitle="Numbers that matter in field sales"
    stats={[
      { amount: '23%', title: 'Increase in Close Rate' },
      { amount: '10K+', title: 'Conversations Captured' },
      { amount: '85%', title: 'Rep Satisfaction' },
      { amount: '4.8/5', title: 'Customer Rating' },
    ]}
  />

  <!-- Industry Section ************** -->
  <section class="py-16 bg-gray-50 dark:bg-gray-900">
    <div class="max-w-6xl mx-auto px-4 text-center">
      <h2 class="text-3xl font-bold mb-4 dark:text-white">Trusted by Industry Leaders</h2>
      <p class="text-xl text-gray-600 dark:text-gray-300 mb-8">Forward-thinking sales teams across high-trust verticals</p>
      <div class="flex flex-wrap justify-center gap-6 text-lg font-medium text-gray-700 dark:text-gray-300">
        <span class="px-4 py-2 bg-white dark:bg-gray-800 rounded-lg shadow-sm">Solar Energy</span>
        <span class="px-4 py-2 bg-white dark:bg-gray-800 rounded-lg shadow-sm">Roofing & Restoration</span>
        <span class="px-4 py-2 bg-white dark:bg-gray-800 rounded-lg shadow-sm">Home Security</span>
        <span class="px-4 py-2 bg-white dark:bg-gray-800 rounded-lg shadow-sm">HVAC Services</span>
        <span class="px-4 py-2 bg-white dark:bg-gray-800 rounded-lg shadow-sm">Pest Control</span>
        <span class="px-4 py-2 bg-white dark:bg-gray-800 rounded-lg shadow-sm">Automotive</span>
      </div>
    </div>
  </section>

  <!-- Testimonials Widget *********** -->
  <Testimonials
    title="What our users say"
    testimonials={[
      {
        testimonial: `SalesTag transformed how we coach our door-to-door team. Instead of guessing what went wrong, we can pinpoint exact moments and improve. Our close rate jumped 25% in 3 months.`,
        name: 'Sarah Chen',
        job: 'Sales Director, SolarTech Solutions',
        image: {
          src: 'https://images.unsplash.com/photo-1618835962148-cf177563c6c0?ixlib=rb-4.0.3&ixid=M3wxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8fA%3D%3D&auto=format&fit=crop&w=774&q=80',
          alt: 'Sarah Chen Image',
        },
      },
      {
        testimonial: `The AI tagging is incredible. It catches objections I didn't even realize prospects were making. Now I can prepare better responses and close more deals.`,
        name: 'Mike Rodriguez',
        job: 'Senior Sales Rep, Apex Roofing',
        image: {
          src: 'https://images.unsplash.com/photo-1561406636-b80293969660?ixlib=rb-4.0.3&ixid=M3wxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8fA%3D%3D&auto=format&fit=crop&w=774&q=80',
          alt: 'Mike Rodriguez Image',
        },
      },
      {
        testimonial: `Finally, a tool built by people who understand field sales. The badge is comfortable, the insights are actionable, and my team actually wants to use it.`,
        name: 'Jennifer Walsh',
        job: 'VP Sales, SecureHome Systems',
        image: {
          src: 'https://images.unsplash.com/photo-1545167622-3a6ac756afa4?ixlib=rb-4.0.3&ixid=M3wxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8fA%3D%3D&auto=format&fit=crop&w=824&q=80',
          alt: 'Jennifer Walsh Image',
        },
      },
    ]}
  />

  <!-- Content Widget **************** -->
  <Content
    isAfterContent={true}
    items={[
      {
        title: 'Industries We Serve',
        description: `SalesTag specializes in high-trust verticals where personal relationships matter most. Our AI understands the nuances of consultative selling.`,
      },
      {
        title: 'Proven Verticals',
        description: `Solar • Roofing & Restoration • Smart Home Security • Pest Control • HVAC • Automotive • Insurance`,
      },
    ]}
    image={{
      src: defaultImage,
      alt: 'SalesTag Badge - Wearable AI Device',
    }}
  >
    <Fragment slot="content">
      <h3 class="text-2xl font-bold tracking-tight dark:text-white sm:text-3xl mb-2">
        Built for High-Trust <br /><span class="text-2xl">Industries</span>
      </h3>
    </Fragment>

    <Fragment slot="bg">
      <div class="absolute inset-0 bg-blue-50 dark:bg-transparent"></div>
    </Fragment>
  </Content>

  <!-- CallToAction Widget *********** -->
  <CallToAction
    title="Ready to Transform Your Sales Process?"
    subtitle="Join forward-thinking sales teams who are already using SalesTag to capture, analyze, and improve their conversations."
    actions={[
      {
        variant: 'primary',
        text: 'Join Waitlist',
        href: '/subscribe',
      },
      {
        variant: 'secondary', 
        text: 'Schedule Demo',
        href: '/demo',
      },
    ]}
  />
</PageLayout>
