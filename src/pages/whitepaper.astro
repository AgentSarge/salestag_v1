---
import PageLayout from '~/layouts/PageLayout.astro';
import SeoMeta from '~/components/common/SeoMeta.astro';
import Hero from '~/components/widgets/Hero.astro';
import Features from '~/components/widgets/Features.astro';
import Content from '~/components/widgets/Content.astro';
import Steps from '~/components/widgets/Steps.astro';
import Features2 from '~/components/widgets/Features2.astro';
import CallToAction from '~/components/widgets/CallToAction.astro';

import heroImage from '~/assets/images/hero-image.png';
import defaultImage from '~/assets/images/default.png';

const metadata = {
  title: 'The SalesTag Whitepaper — Technical Architecture',
};
---

<SeoMeta 
  title="The SalesTag Whitepaper — Technical Architecture & Research Goals"
  description="Strategic and technical overview of the SalesTag system. Preview our AGI-first architecture, tech stack, research goals, and comprehensive system design."
  url="https://salestag.io/whitepaper"
  image="/og/whitepaper.jpg"
  schemaType="WebPage"
/>

<PageLayout metadata={metadata}>
  <!-- Hero Widget ******************* -->
  <Hero
    tagline="Technical Whitepaper"
    actions={[
      {
        variant: 'primary',
        text: 'Download PDF',
        href: '/contact',
        icon: 'tabler:download',
      },
      { text: 'Research Partnership', href: '/contact' },
    ]}
    image={{
      src: defaultImage,
      alt: 'SalesTag Technical Architecture',
    }}
  >
    <Fragment slot="title">
      The SalesTag <br />
      <span class="text-accent dark:text-white">Whitepaper</span>
    </Fragment>

    <Fragment slot="subtitle">
      We built SalesTag to solve a real-world problem: how to capture, analyze, and improve high-stakes human sales conversations. This whitepaper previews our system architecture and long-term research goals.
    </Fragment>
  </Hero>

  <!-- Features Widget *************** -->
  <Features
    title="AGI-First Architecture"
    subtitle="Designed not just for today's LLMs, but for future AGI agents"
    items={[
      {
        title: 'Privacy by Design',
        description: 'End-to-end encryption and zero-trust architecture ensure conversation data remains secure and private.',
        icon: 'tabler:shield-lock',
      },
      {
        title: 'Extensible Framework',
        description: 'Modular system design allows for seamless integration with future AI models and technologies.',
        icon: 'tabler:puzzle',
      },
      {
        title: 'Future-Proof Storage',
        description: 'Data structures optimized for emerging AI paradigms and advanced reasoning systems.',
        icon: 'tabler:database',
      },
      {
        title: 'Scalable Intelligence',
        description: 'Architecture designed to handle millions of conversations and complex AI workloads.',
        icon: 'tabler:trending-up',
      },
    ]}
  />

  <!-- Content Widget **************** -->
  <Content
    title="The Tech Stack"
    subtitle="Cutting-edge technology powering the future of sales intelligence"
    isReversed
    items={[
      {
        title: 'Edge Recording',
        description: 'ESP32-based wearable badges capture audio with voice activation and automatic conversation detection.',
      },
      {
        title: 'Cloud Pipeline',
        description: 'Supabase-powered backend handles real-time processing, storage, and analytics with enterprise-grade reliability.',
      },
      {
        title: 'Semantic Search',
        description: 'pgvector integration enables lightning-fast similarity search across millions of conversation snippets.',
      },
      {
        title: 'AI Processing',
        description: 'Advanced LLM tagging via OpenAI and Claude APIs with human-in-the-loop validation and scoring.',
      },
    ]}
    image={{
      src: heroImage,
      alt: 'SalesTag Technical Stack',
    }}
  >
    <Fragment slot="content">
      <h3 class="text-2xl font-bold tracking-tight dark:text-white sm:text-3xl mb-2">
        Self-Updating <br /><span class="text-2xl">Intelligence Vault</span>
      </h3>
    </Fragment>

    <Fragment slot="bg">
      <div class="absolute inset-0 bg-blue-50 dark:bg-transparent"></div>
    </Fragment>
  </Content>

  <!-- Steps Widget ****************** -->
  <Steps
    title="System Architecture"
    tagline="From Edge to Intelligence"
    items={[
      {
        title: 'Conversation Capture',
        description: 'Wearable badges automatically detect and record sales conversations using advanced voice activation.',
        icon: 'tabler:microphone',
      },
      {
        title: 'Real-Time Processing',
        description: 'Cloud pipelines transcribe audio and extract metadata including location, duration, and participants.',
        icon: 'tabler:cpu',
      },
      {
        title: 'AI Analysis',
        description: 'Large language models identify objections, sentiment, buying signals, and conversation patterns.',
        icon: 'tabler:brain',
      },
      {
        title: 'Human Validation',
        description: 'Sales managers and coaches review and score AI-generated insights for continuous improvement.',
        icon: 'tabler:users',
      },
      {
        title: 'Intelligent Storage',
        description: 'Processed conversations enter the vault with rich metadata and semantic embeddings for instant search.',
        icon: 'tabler:database',
      },
    ]}
    image={{
      src: 'https://images.unsplash.com/photo-1558494949-ef010cbdcc31?ixlib=rb-4.0.3&auto=format&fit=crop&w=1000&q=80',
      alt: 'SalesTag System Architecture Flow',
    }}
  />

  <!-- Features2 Widget ************** -->
  <Features2
    title="Research Goals"
    subtitle="Beyond product development - advancing AI research and safety"
    columns={2}
    items={[
      {
        title: 'Dataset Creation',
        description: 'Building the world\'s largest repository of labeled, high-quality human sales conversation data.',
        icon: 'tabler:database',
      },
      {
        title: 'Fine-Tuning Pipeline',
        description: 'Developing methodologies for training industry-specific AI models on real conversation data.',
        icon: 'tabler:adjustments',
      },
      {
        title: 'Alignment Research',
        description: 'Contributing to AI safety research through real-world human behavior and decision-making patterns.',
        icon: 'tabler:target',
      },
      {
        title: 'RLHF Advancement',
        description: 'Pioneering reinforcement learning from human feedback using authentic sales interaction scenarios.',
        icon: 'tabler:refresh',
      },
      {
        title: 'Agent Behavior',
        description: 'Testing AI agent capabilities in controlled, real-world sales environments and scenarios.',
        icon: 'tabler:robot',
      },
      {
        title: 'Safety Experiments',
        description: 'Developing and validating AI safety measures using high-stakes human interaction data.',
        icon: 'tabler:shield-check',
      },
    ]}
  />

  <!-- Content Widget **************** -->
  <Content
    isAfterContent
    items={[
      {
        title: 'Open Research',
        description: 'Collaborate with leading AI research institutions and contribute to open science initiatives.',
      },
      {
        title: 'Joint Papers',
        description: 'Partner with academic researchers on publications advancing the field of conversational AI.',
      },
      {
        title: 'Conference Presentations',
        description: 'Share findings at top AI conferences including NeurIPS, ICML, and specialized sales technology events.',
      },
      {
        title: 'Full Documentation',
        description: 'Complete 20+ page PDF covering architecture, benchmarks, methodologies, and research findings.',
      },
    ]}
    image={{
      src: defaultImage,
      alt: 'SalesTag Research Collaboration',
    }}
  >
    <Fragment slot="content">
      <h3 class="text-2xl font-bold tracking-tight dark:text-white sm:text-3xl mb-2">
        Research <br /><span class="text-2xl">Partnerships</span>
      </h3>
    </Fragment>

    <Fragment slot="bg">
      <div class="absolute inset-0 bg-blue-50 dark:bg-transparent"></div>
    </Fragment>
  </Content>

  <!-- CallToAction Widget *********** -->
  <CallToAction
    title="Want the Full Whitepaper?"
    subtitle="Get access to our complete technical documentation including architecture details, research findings, and collaboration opportunities."
    actions={[
      {
        variant: 'primary',
        text: 'Request Full PDF',
        href: '/contact',
      },
      {
        variant: 'secondary',
        text: 'Research Partnership',
        href: '/contact',
      },
    ]}
  />
</PageLayout> 