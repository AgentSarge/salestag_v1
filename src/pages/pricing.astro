---
import Layout from '~/layouts/PageLayout.astro';
import SeoMeta from '~/components/common/SeoMeta.astro';
import HeroText from '~/components/widgets/HeroText.astro';
import Prices from '~/components/widgets/Pricing.astro';
import FAQs from '~/components/widgets/FAQs.astro';
import Steps from '~/components/widgets/Steps.astro';
import Features3 from '~/components/widgets/Features3.astro';
import CallToAction from '~/components/widgets/CallToAction.astro';

const metadata = {
  title: 'SalesTag Pricing – AI Sales Intelligence Plans',
};
---

<SeoMeta 
  title="SalesTag Pricing – AI Sales Intelligence Plans & Features"
  description="Choose the perfect SalesTag plan for your sales team. AI-powered conversation capture, coaching insights, and performance analytics starting at $99/month per rep."
  url="https://salestag.io/pricing"
  image="/og/pricing.jpg"
  schemaType="WebPage"
/>

<Layout metadata={metadata}>
  <!-- HeroText Widget ******************* -->
  <HeroText
    tagline="Pricing"
    title="Transform Your Sales Team with AI Intelligence"
    subtitle="Choose the perfect plan that scales with your field sales organization."
  />

  <!-- Pricing Widget ******************* -->
  <Prices
    title="SalesTag Plans"
    subtitle="Flexible pricing for teams of all sizes"
    prices={[
      {
        title: 'Starter',
        subtitle: 'Perfect for small sales teams',
        price: 99,
        period: 'per rep/month',
        items: [
          {
            description: 'AI conversation capture & transcription',
          },
          {
            description: 'Basic objection detection',
          },
          {
            description: 'Weekly performance reports',
          },
          {
            description: 'Up to 5 reps',
          },
          {
            description: 'Email support',
          },
        ],
        callToAction: {
          target: '_blank',
          text: 'Join Waitlist',
          href: '/subscribe',
        },
      },
      {
        title: 'Professional',
        subtitle: 'Advanced AI for growing teams',
        price: 149,
        period: 'per rep/month',
        items: [
          {
            description: 'Everything in Starter',
          },
          {
            description: 'Real-time coaching suggestions',
          },
          {
            description: 'Advanced sentiment analysis',
          },
          {
            description: 'Custom coaching playbooks',
          },
          {
            description: 'Up to 25 reps',
          },
          {
            description: 'Priority support & training',
          },
        ],
        callToAction: {
          target: '_blank',
          text: 'Join Waitlist',
          href: '/subscribe',
        },
        hasRibbon: true,
        ribbonTitle: 'popular',
      },
      {
        title: 'Enterprise',
        subtitle: 'Complete AI sales intelligence',
        price: 299,
        period: 'per rep/month',
        items: [
          {
            description: 'Everything in Professional',
          },
          {
            description: 'Custom AI model training',
          },
          {
            description: 'Advanced analytics dashboard',
          },
          {
            description: 'API access & integrations',
          },
          {
            description: 'Unlimited reps',
          },
          {
            description: 'Dedicated success manager',
          },
        ],
        callToAction: {
          target: '_blank',
          text: 'Contact Sales',
          href: '/contact',
        },
      },
    ]}
  />

  <!-- Features3 Widget ************** -->
  <Features3
    title="What's Included"
    subtitle="Every SalesTag plan includes enterprise-grade features"
    columns={2}
    items={[
      {
        title: 'Wearable Badge Hardware',
        description: 'Professional-grade recording device designed for field sales environments with all-day battery life.',
        icon: 'tabler:device-watch',
      },
      {
        title: 'AI-Powered Analysis',
        description: 'Advanced LLM processing to identify objections, buying signals, and coaching opportunities.',
        icon: 'tabler:brain',
      },
      {
        title: 'Secure Data Vault',
        description: 'Enterprise-grade encryption and storage with SOC 2 compliance for all conversation data.',
        icon: 'tabler:shield-lock',
      },
      {
        title: 'Real-time Insights',
        description: 'Instant feedback during live conversations to help reps navigate objections and close deals.',
        icon: 'tabler:clock',
      },
      {
        title: 'Performance Tracking',
        description: 'Comprehensive analytics to track improvement in close rates, objection handling, and rep development.',
        icon: 'tabler:chart-line',
      },
      {
        title: 'Industry Specialization',
        description: 'Pre-trained models for solar, roofing, security, and other high-trust sales verticals.',
        icon: 'tabler:building',
      },
    ]}
    classes={{ container: 'max-w-5xl' }}
  />

  <!-- Steps Widget ****************** -->
  <Steps
    title="Getting Started with SalesTag"
    tagline="Simple onboarding process"
    isReversed={true}
    items={[
      {
        title: 'Join Waitlist',
        icon: 'tabler:number-1',
      },
      {
        title: 'Schedule Demo',
        icon: 'tabler:number-2',
      },
      {
        title: 'Receive Hardware',
        icon: 'tabler:number-3',
      },
      {
        title: 'Team Training',
        icon: 'tabler:number-4',
      },
      {
        title: 'Start Capturing',
        icon: 'tabler:number-5',
      },
      {
        title: 'Review Insights',
        icon: 'tabler:number-6',
      },
      {
        title: 'Improve Performance',
        icon: 'tabler:number-7',
      },
    ]}
    image={{
      src: '/press-kit/product/salestag-badge.png',
      alt: 'SalesTag Badge Setup Process',
    }}
  />

  <!-- FAQs Widget ******************* -->
  <FAQs
    title="Pricing FAQs"
    subtitle="Common questions about SalesTag plans and pricing. Have more questions? Contact our team."
    columns={1}
    items={[
      {
        title: 'Is there a setup fee or contract requirement?',
        description:
          'No setup fees or long-term contracts. You can start with a monthly subscription and scale up or down as needed.',
      },
      {
        title: 'What happens to our data if we cancel?',
        description:
          'You maintain full ownership of your conversation data. We provide data export options and secure deletion upon request.',
      },
      {
        title: 'Can we try SalesTag before committing?',
        description:
          'Yes! We offer a 30-day pilot program for qualified sales teams. Schedule a demo to learn about trial options.',
      },
      {
        title: 'Do you offer volume discounts for large teams?',
        description:
          'Absolutely. Enterprise customers with 50+ reps receive custom pricing and additional features. Contact our sales team.',
      },
      {
        title: 'What industries do you support?',
        description:
          'We specialize in high-trust verticals including solar, roofing, security, pest control, HVAC, and automotive sales.',
      },
      {
        title: 'How quickly can we see results?',
        description:
          'Most teams see measurable improvements in close rates within 30-60 days. Our AI models adapt to your specific sales process.',
      },
    ]}
  />

  <!-- CallToAction Widget *********** -->
  <CallToAction
    title="Ready to Transform Your Sales Process?"
    subtitle="Join forward-thinking sales teams who are already using SalesTag to capture, analyze, and improve their conversations."
    actions={[
      {
        variant: 'primary',
        text: 'Join Waitlist',
        href: '/subscribe',
      },
      {
        variant: 'secondary',
        text: 'Schedule Demo',
        href: '/demo',
      },
    ]}
  />
</Layout>
