---
import PageLayout from '~/layouts/PageLayout.astro';
import SeoMeta from '~/components/common/SeoMeta.astro';
import Hero from '~/components/widgets/Hero.astro';
import Content from '~/components/widgets/Content.astro';
import Features2 from '~/components/widgets/Features2.astro';
import Steps from '~/components/widgets/Steps.astro';
import CallToAction from '~/components/widgets/CallToAction.astro';

import defaultImage from '~/assets/images/default.png';

const metadata = {
  title: 'SalesTag Roadmap – Upcoming AI Sales Intelligence Features',
};

const roadmapSchemaData = {
  items: [
    {
      "@type": "ListItem",
      "position": 1,
      "name": "AI Coaching Engine",
      "description": "Transform conversations into actionable coaching insights with real-time AI analysis",
      "url": "https://salestag.io/roadmap#ai-coaching-engine"
    },
    {
      "@type": "ListItem", 
      "position": 2,
      "name": "iOS App",
      "description": "Native mobile experience for field sales teams with seamless badge integration",
      "url": "https://salestag.io/roadmap#ios-app"
    },
    {
      "@type": "ListItem",
      "position": 3, 
      "name": "Vault Pro Features",
      "description": "Advanced enterprise features for teams managing large conversation datasets",
      "url": "https://salestag.io/roadmap#vault-pro-features"
    },
    {
      "@type": "ListItem",
      "position": 4,
      "name": "AI Sales Agent", 
      "description": "AGI-powered sales assistant trained on your vault's conversation data",
      "url": "https://salestag.io/roadmap#ai-sales-agent"
    }
  ]
};
---

<SeoMeta 
  title="SalesTag Roadmap – Upcoming AI Sales Intelligence Features"
  description="Discover what's coming next for SalesTag. View our product roadmap including AI coaching engine, iOS app, and advanced vault features."
  url="https://salestag.io/roadmap"
  image="/og/roadmap.jpg"
  schemaType="ItemList"
  schemaData={roadmapSchemaData}
/>

<PageLayout metadata={metadata}>
  <!-- Hero Widget ******************* -->
  <Hero
    tagline="Product Roadmap"
    actions={[
      {
        variant: 'primary',
        text: 'View Updates',
        href: '/changelog',
        icon: 'tabler:telescope',
      },
      { text: 'Join Community', href: '/subscribe' },
    ]}
    image={{
      src: defaultImage,
      alt: 'SalesTag Product Roadmap Timeline',
    }}
  >
    <Fragment slot="title">
      🔭 SalesTag <br />
      <span class="text-accent dark:text-white">Roadmap</span>
    </Fragment>

    <Fragment slot="subtitle">
      Here's what we're working on next to transform sales intelligence. Our roadmap reflects feedback from early adopters and the evolving needs of field sales teams.
    </Fragment>
  </Hero>

  <!-- Content Widget **************** -->
  <Content
    title="v1.1 - AI Coaching Engine"
    subtitle="Coming Soon - Transform conversations into coaching insights"
    isReversed
    items={[
      {
        title: '🧠 Real-Time Analysis',
        description: 'Instant call scoring and objection tagging during live conversations for immediate feedback.',
      },
      {
        title: '📊 Performance Insights',
        description: 'Personalized rep feedback via Supabase Edge Functions with metrics comparison vs. team average.',
      },
      {
        title: '🎯 Automated Coaching',
        description: 'AI-generated coaching recommendations based on conversation patterns and successful strategies.',
      },
    ]}
    image={{
      src: defaultImage,
      alt: 'SalesTag AI Coaching Engine',
    }}
  >
    <Fragment slot="content">
      <div class="inline-flex items-center px-3 py-1 rounded-full text-sm font-medium bg-yellow-100 text-yellow-800 dark:bg-yellow-900 dark:text-yellow-200 mb-4">
        v1.1 - Coming Soon
      </div>
      <h3 class="text-2xl font-bold tracking-tight dark:text-white sm:text-3xl mb-2">
        🧠 AI Coaching Engine
      </h3>
    </Fragment>

    <Fragment slot="bg">
      <div class="absolute inset-0 bg-gradient-to-r from-yellow-50 to-yellow-100 dark:from-yellow-900/30 dark:to-yellow-800/30"></div>
    </Fragment>
  </Content>

  <!-- Features2 Widget ************** -->
  <Features2
    title="Upcoming Features"
    subtitle="Major releases planned for the next 12 months"
    columns={2}
    items={[
      {
        title: '📱 iOS App (v1.2)',
        description: 'Native mobile experience with voice badge integration, push-to-transcribe recorder, agent leaderboard, and offline sync.',
        icon: 'tabler:device-mobile',
      },
      {
        title: '🔐 Vault Pro Features (v1.3)',
        description: 'Advanced enterprise features including private dashboards, call bookmarking, CRM integrations, and advanced search.',
        icon: 'tabler:database',
      },
      {
        title: '🤖 AI Sales Agent (v1.4)',
        description: 'AGI-powered assistant with fine-tuned LLM, real-time objection handling, and predictive conversation scoring.',
        icon: 'tabler:robot',
      },
      {
        title: '🔄 Advanced Integrations',
        description: 'Deep CRM connections with Salesforce, HubSpot, Pipedrive, and custom API access for enterprise workflows.',
        icon: 'tabler:plug',
      },
    ]}
  />

  <!-- Steps Widget ****************** -->
  <Steps
    title="Development Timeline"
    tagline="Our planned release schedule"
    items={[
      {
        title: 'Q1 2025 - AI Coaching Engine',
        description: 'Real-time conversation analysis and automated coaching recommendations go live.',
        icon: 'tabler:brain',
      },
      {
        title: 'Q2 2025 - Mobile App Launch',
        description: 'iOS app with full badge integration and offline conversation capabilities.',
        icon: 'tabler:device-mobile',
      },
      {
        title: 'Q3 2025 - Enterprise Features',
        description: 'Advanced vault features, CRM integrations, and team management tools.',
        icon: 'tabler:building',
      },
      {
        title: 'Q4 2025 - AI Sales Agent',
        description: 'Launch of AGI-powered sales assistant trained on conversation data.',
        icon: 'tabler:rocket',
      },
    ]}
    image={{
      src: 'https://images.unsplash.com/photo-1611224923853-80b023f02d71?ixlib=rb-4.0.3&auto=format&fit=crop&w=1000&q=80',
      alt: 'SalesTag Development Timeline',
    }}
  />

  <!-- Content Widget **************** -->
  <Content
    isAfterContent
    items={[
      {
        title: 'Community Feedback',
        description: 'Feature requests and priorities driven by input from our early access community and beta testers.',
      },
      {
        title: 'Technical Innovation',
        description: 'Continuous advancement in AI capabilities, voice recognition, and real-time processing technology.',
      },
      {
        title: 'Market Adaptation',
        description: 'Roadmap adjustments based on evolving needs in field sales and emerging AI opportunities.',
      },
      {
        title: 'Partnership Integration',
        description: 'Collaboration with leading CRM providers and sales technology platforms for seamless workflows.',
      },
    ]}
    image={{
      src: defaultImage,
      alt: 'SalesTag Community Feedback',
    }}
  >
    <Fragment slot="content">
      <h3 class="text-2xl font-bold tracking-tight dark:text-white sm:text-3xl mb-2">
        💬 Feedback Loop
      </h3>
    </Fragment>

    <Fragment slot="bg">
      <div class="absolute inset-0 bg-gradient-to-r from-gray-50 to-gray-100 dark:from-gray-800 dark:to-gray-700"></div>
    </Fragment>
  </Content>

  <!-- CallToAction Widget *********** -->
  <CallToAction
    title="Ready to Shape the Future of Sales?"
    subtitle="Join early adopters who are already experiencing the power of AI-driven sales intelligence and help influence our roadmap."
    actions={[
      {
        variant: 'primary',
        text: 'Join the Discussion',
        href: '/subscribe',
      },
      {
        variant: 'secondary',
        text: 'Contact Team',
        href: '/contact',
      },
    ]}
  />
</PageLayout> 