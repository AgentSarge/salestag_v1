---
import PageLayout from '~/layouts/PageLayout.astro';
import SeoMeta from '~/components/common/SeoMeta.astro';
import Hero from '~/components/widgets/Hero.astro';
import Steps from '~/components/widgets/Steps.astro';
import Features from '~/components/widgets/Features.astro';
import Content from '~/components/widgets/Content.astro';
import CallToAction from '~/components/widgets/CallToAction.astro';
import Features2 from '~/components/widgets/Features2.astro';

import heroImage from '~/assets/images/hero-image.png';
import defaultImage from '~/assets/images/default.png';

const howToSchemaData = {
  steps: [
    {
      "@type": "HowToStep",
      "name": "Capture a Call",
      "text": "The rep wears a badge. It records audio, uploads it automatically, and attaches metadata like location, time, and product vertical."
    },
    {
      "@type": "HowToStep", 
      "name": "Transcription & Tagging",
      "text": "The system generates a transcript and uses LLM agents to extract objections, emotional tone, key phrases, and close attempts."
    },
    {
      "@type": "HowToStep",
      "name": "Review & Coaching", 
      "text": "The rep sees a summary and tags. A coach can score the call, leave feedback, or compare it against top performers. It's like having a virtual mentor for every rep."
    },
    {
      "@type": "HowToStep",
      "name": "Vaulting & Search",
      "text": "Each call enters the SalesTag Vault, tagged and embedded for fast retrieval. Want to hear how reps handled 'price objections' in Phoenix last month? Just search."
    }
  ]
};
---

<SeoMeta 
  title="SalesTag Demo – See AI Sales Intelligence in Action"
  description="Watch how SalesTag captures, analyzes, and improves sales conversations. 4-step walkthrough of our AI-powered badge and coaching platform."
  url="https://salestag.io/demo"
  image="/og/demo.jpg"
  schemaType="HowTo"
  schemaData={howToSchemaData}
/>

<PageLayout>
  <!-- Hero Widget ******************* -->
  <Hero
    tagline="Live Demo"
    title="See SalesTag in Action"
    subtitle="Whether you're a rep, a coach, or a founder, the power of SalesTag is best understood live. Here's how our system works — and how you can try it."
    actions={[
      {
        variant: 'primary',
        text: 'Schedule Live Demo',
        href: '/contact',
        icon: 'tabler:calendar',
      },
      { text: 'Join Waitlist', href: '/subscribe' },
    ]}
    image={{
      src: defaultImage,
      alt: 'SalesTag Wearable Badge Demo',
    }}
  />

  <!-- Steps Widget ****************** -->
  <Steps
    title="How SalesTag Works"
    tagline="4-Step Process"
    items={[
      {
        title: 'Capture a Call',
        description: 'The rep wears a badge. It records audio, uploads it automatically, and attaches metadata like location, time, and product vertical.',
        icon: 'tabler:microphone',
      },
      {
        title: 'Transcription & Tagging',
        description: 'The system generates a transcript and uses LLM agents to extract objections, emotional tone, key phrases, and close attempts.',
        icon: 'tabler:brain',
      },
      {
        title: 'Review & Coaching',
        description: 'The rep sees a summary and tags. A coach can score the call, leave feedback, or compare it against top performers. It\'s like having a virtual mentor for every rep.',
        icon: 'tabler:users',
      },
      {
        title: 'Vaulting & Search',
        description: 'Each call enters the SalesTag Vault, tagged and embedded for fast retrieval. Want to hear how reps handled "price objections" in Phoenix last month? Just search.',
        icon: 'tabler:database',
      },
    ]}
    image={{
      src: 'https://images.unsplash.com/photo-1551288049-bebda4e38f71?ixlib=rb-4.0.3&auto=format&fit=crop&w=1000&q=80',
      alt: 'SalesTag Process Flow',
    }}
  />

  <!-- Features Widget *************** -->
  <Features
    title="Demo Highlights"
    subtitle="Key capabilities you'll see in our live demonstration"
    items={[
      {
        title: 'Real-Time Processing',
        description: 'Watch conversations get transcribed and analyzed in real-time as they happen.',
        icon: 'tabler:clock',
      },
      {
        title: 'Objection Detection',
        description: 'See how our AI instantly identifies and categorizes different types of customer objections.',
        icon: 'tabler:target',
      },
      {
        title: 'Coaching Insights',
        description: 'Experience personalized coaching recommendations based on conversation analysis.',
        icon: 'tabler:lightbulb',
      },
      {
        title: 'Performance Analytics',
        description: 'Explore comprehensive dashboards showing team performance and improvement trends.',
        icon: 'tabler:chart-line',
      },
    ]}
  />

  <!-- Content Widget **************** -->
  <Content
    title="Interactive Demo Features"
    subtitle="Experience the full power of SalesTag's AI-powered sales intelligence"
    isReversed
    items={[
      {
        title: 'Live Badge Demonstration',
        description: 'See the actual hardware in action, from setup to conversation capture.',
      },
      {
        title: 'AI Analysis Walkthrough',
        description: 'Watch real conversations get processed and tagged by our AI systems.',
      },
      {
        title: 'Coaching Dashboard Tour',
        description: 'Explore the manager interface and see how teams track performance improvements.',
      },
      {
        title: 'ROI Calculator',
        description: 'Calculate potential impact on your team\'s close rates and revenue.',
      },
    ]}
    image={{
      src: defaultImage,
      alt: 'SalesTag Demo Interface',
    }}
  >
    <Fragment slot="content">
      <h3 class="text-2xl font-bold tracking-tight dark:text-white sm:text-3xl mb-2">
        What You'll Experience
      </h3>
    </Fragment>

    <Fragment slot="bg">
      <div class="absolute inset-0 bg-blue-50 dark:bg-transparent"></div>
    </Fragment>
  </Content>

  <!-- Features2 Widget ************** -->
  <Features2
    title="Demo Options"
    subtitle="Choose the demonstration format that works best for your team"
    columns={3}
    items={[
      {
        title: 'Live Video Demo',
        description: 'Interactive 30-minute session with our sales engineering team. Ask questions and see custom scenarios.',
        icon: 'tabler:video',
      },
      {
        title: 'Self-Guided Tour',
        description: 'Explore our interactive demo environment at your own pace with guided tutorials.',
        icon: 'tabler:route',
      },
      {
        title: 'Pilot Program',
        description: '30-day trial with your actual sales team. Real conversations, real results, real insights.',
        icon: 'tabler:rocket',
      },
    ]}
  />

  <!-- Content Widget **************** -->
  <Content
    isAfterContent
    items={[
      {
        title: 'Industry-Specific Examples',
        description: 'See demos tailored to your vertical - solar, roofing, security, or other high-trust sales.',
      },
      {
        title: 'Custom Use Cases',
        description: 'We\'ll show scenarios specific to your team\'s challenges and sales process.',
      },
      {
        title: 'Technical Deep Dive',
        description: 'For technical teams, explore our API, data models, and integration capabilities.',
      },
      {
        title: 'Implementation Planning',
        description: 'Discuss rollout strategy, training requirements, and success metrics for your organization.',
      },
    ]}
    image={{
      src: heroImage,
      alt: 'SalesTag Implementation Success',
    }}
  >
    <Fragment slot="content">
      <h3 class="text-2xl font-bold tracking-tight dark:text-white sm:text-3xl mb-2">
        Tailored to Your Needs
      </h3>
    </Fragment>

    <Fragment slot="bg">
      <div class="absolute inset-0 bg-blue-50 dark:bg-transparent"></div>
    </Fragment>
  </Content>

  <!-- CallToAction Widget *********** -->
  <CallToAction
    title="Ready to See SalesTag in Action?"
    subtitle="Schedule a personalized demo with our team or join our waitlist for early access."
    actions={[
      {
        variant: 'primary',
        text: 'Schedule Live Demo',
        href: '/contact',
      },
      {
        variant: 'secondary',
        text: 'Join Waitlist',
        href: '/subscribe',
      },
    ]}
  />
</PageLayout> 