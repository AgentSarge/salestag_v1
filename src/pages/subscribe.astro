---
import PageLayout from '~/layouts/PageLayout.astro';
import SeoMeta from '~/components/common/SeoMeta.astro';
import Hero from '~/components/widgets/Hero.astro';
import Features from '~/components/widgets/Features.astro';
import ContactUs from '~/components/widgets/Contact.astro';
import Features2 from '~/components/widgets/Features2.astro';
import CallToAction from '~/components/widgets/CallToAction.astro';

import defaultImage from '~/assets/images/default.png';

const metadata = {
  title: 'Join SalesTag Early Access – AI Sales Intelligence Platform',
};

const contactSchemaData = {
  contactPoint: {
    "@type": "ContactPoint",
    "contactType": "sales",
    "availableLanguage": "English",
    "areaServed": "US",
    "serviceType": "Sales Intelligence Platform"
  }
};
---

<SeoMeta 
  title="Join SalesTag Early Access – AI Sales Intelligence Platform"
  description="Request early access to SalesTag's AI-powered sales conversation capture and coaching platform. Join field sales teams improving their close rates."
  url="https://salestag.io/subscribe"
  image="/og/subscribe.jpg"
  schemaType="ContactPage"
  schemaData={contactSchemaData}
/>

<PageLayout metadata={metadata}>
  <!-- Hero Widget ******************* -->
  <Hero
    tagline="Early Access"
    actions={[
      {
        variant: 'primary',
        text: 'Join Waitlist',
        href: '#signup',
        icon: 'tabler:rocket',
      },
      { text: 'Learn More', href: '/demo' },
    ]}
    image={{
      src: defaultImage,
      alt: 'SalesTag Early Access Program',
    }}
  >
    <Fragment slot="title">
      Join the SalesTag <br />
      <span class="text-accent dark:text-white">Early Access List</span>
    </Fragment>

    <Fragment slot="subtitle">
      Be among the first to experience the future of sales intelligence. Join forward-thinking sales teams who are already transforming their conversations into competitive advantages.
    </Fragment>
  </Hero>

  <!-- Features Widget *************** -->
  <Features
    title="Early Access Benefits"
    subtitle="Exclusive advantages for early adopters of SalesTag's AI platform"
    items={[
      {
        title: 'Priority Access',
        description: 'Skip the line and get immediate access to SalesTag when we launch new features and capabilities.',
        icon: 'tabler:star',
      },
      {
        title: 'Special Pricing',
        description: 'Lock in discounted rates and exclusive pricing tiers available only to early access members.',
        icon: 'tabler:discount',
      },
      {
        title: 'Direct Feedback',
        description: 'Shape the product roadmap with your input and help us build features that matter most to your team.',
        icon: 'tabler:message-circle',
      },
      {
        title: 'Dedicated Support',
        description: 'White-glove onboarding and personalized training to ensure your team succeeds from day one.',
        icon: 'tabler:headset',
      },
    ]}
  />

  <!-- ContactUs Widget *************** -->
  <ContactUs
    id="signup"
    title="Request Early Access"
    subtitle="Join the waitlist to be notified when SalesTag becomes available. We'll keep you updated on our progress and development milestones."
    inputs={[
      {
        type: 'text',
        name: 'name',
        label: 'Full Name',
        placeholder: 'John Smith',
      },
      {
        type: 'email',
        name: 'email',
        label: 'Work Email',
        placeholder: 'john@company.com',
      },
      {
        type: 'text',
        name: 'company',
        label: 'Company Name',
        placeholder: 'Acme Solar Solutions',
      },
      {
        type: 'text',
        name: 'vertical',
        label: 'Sales Vertical',
        placeholder: 'e.g. Solar, Roofing, Security, etc.',
      },
      {
        type: 'text',
        name: 'team_size',
        label: 'Sales Team Size',
        placeholder: '5-10 reps',
      },
    ]}
    textarea={{
      label: 'Tell us about your sales challenges',
      placeholder: 'What specific challenges is your sales team facing? What would you like to achieve with AI-powered conversation analysis?',
    }}
    disclaimer={{
      label: 'By submitting this form, you agree to receive communications from SalesTag about our AI sales intelligence platform and early access opportunities.',
    }}
    description="We'll respond within 24 hours with early access details and program information."
  />

  <!-- Features2 Widget ************** -->
  <Features2
    title="What to Expect"
    subtitle="Your journey from waitlist to AI-powered sales success"
    columns={3}
    items={[
      {
        title: 'Immediate Updates',
        description: 'Get notified about product development milestones, feature releases, and beta testing opportunities.',
        icon: 'tabler:bell',
      },
      {
        title: 'Exclusive Demos',
        description: 'Access to special demonstrations and behind-the-scenes looks at SalesTag development.',
        icon: 'tabler:eye',
      },
      {
        title: 'Beta Testing',
        description: 'Opportunity to test new features before general release and provide feedback to our development team.',
        icon: 'tabler:flask',
      },
      {
        title: 'Community Access',
        description: 'Join our private community of forward-thinking sales professionals and AI early adopters.',
        icon: 'tabler:users',
      },
      {
        title: 'Implementation Support',
        description: 'When you\'re ready to deploy, get priority access to our customer success team.',
        icon: 'tabler:rocket',
      },
      {
        title: 'Success Metrics',
        description: 'Track your team\'s improvement with detailed analytics and performance benchmarking.',
        icon: 'tabler:chart-line',
      },
    ]}
  />

  <!-- CallToAction Widget *********** -->
  <CallToAction
    title="Ready to Transform Your Sales Process?"
    subtitle="Don't wait for your competition to gain the AI advantage. Join the early access program and start building your sales intelligence vault today."
    actions={[
      {
        variant: 'primary',
        text: 'Join Waitlist Now',
        href: '#signup',
      },
      {
        variant: 'secondary',
        text: 'Schedule Demo',
        href: '/demo',
      },
    ]}
  />
</PageLayout> 