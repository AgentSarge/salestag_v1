---
import Features2 from '~/components/widgets/Features2.astro';
import Features3 from '~/components/widgets/Features3.astro';
import Hero from '~/components/widgets/Hero.astro';
import Stats from '~/components/widgets/Stats.astro';
import Steps2 from '~/components/widgets/Steps2.astro';
import Content from '~/components/widgets/Content.astro';
import Testimonials from '~/components/widgets/Testimonials.astro';
import Layout from '~/layouts/PageLayout.astro';
import SeoMeta from '~/components/common/SeoMeta.astro';

import heroImage from '~/assets/images/hero-image.png';

const metadata = {
  title: 'About SalesTag – AI Sales Intelligence Company',
};
---

<SeoMeta 
  title="About SalesTag – AI Sales Intelligence Company"
  description="Learn about SalesTag's mission to transform field sales with AI-powered conversation capture and coaching. Founded to help sales teams unlock their potential through data."
  url="https://salestag.io/about"
  image="/og/about.jpg"
  schemaType="WebPage"
/>

<Layout metadata={metadata}>
  <!-- Hero Widget ******************* -->
  <Hero
    tagline="About SalesTag"
    image={{
      src: heroImage,
      alt: 'SalesTag Team - AI Sales Intelligence',
    }}
  >
    <Fragment slot="title">
      Transforming Field Sales with <br />
      <span class="text-accent dark:text-white">AI-Powered Intelligence</span>
    </Fragment>

    <Fragment slot="subtitle">
      Founded by field sales veterans who understand the challenges of door-to-door selling, SalesTag bridges the gap between human conversation and AI insights. We believe every sales interaction contains valuable data that can improve performance and drive results.
    </Fragment>
  </Hero>

  <!-- Stats Widget ****************** -->
  <Stats
    title="Our Impact"
    subtitle="Real numbers from real sales teams"
    stats={[
      { title: 'Conversations Captured', amount: '10K+' },
      { title: 'Sales Teams', amount: '50+' },
      { title: 'Industries Served', amount: '8' },
      { title: 'Average Close Rate Improvement', amount: '23%' },
    ]}
  />

  <!-- Content Widget **************** -->
  <Content
    title="Our Mission"
    subtitle="Building the future of sales intelligence, one conversation at a time."
    isReversed
    items={[
      {
        title: 'Why We Exist',
        description:
          'Field sales is the last frontier of unstructured data. Every day, millions of sales conversations happen without any record or analysis. SalesTag changes that.',
      },
      {
        title: 'Our Vision',
        description: 
          'A world where every sales rep has access to AI-powered coaching, where every conversation becomes a learning opportunity, and where human intuition is amplified by intelligent insights.',
      },
    ]}
    image={{
      src: '/press-kit/product/salestag-diagram.png',
      alt: 'SalesTag System Architecture',
    }}
  >
    <Fragment slot="content">
      <h3 class="text-2xl font-bold tracking-tight dark:text-white sm:text-3xl mb-2">
        From Field Experience to <br /><span class="text-2xl">AI Innovation</span>
      </h3>
    </Fragment>

    <Fragment slot="bg">
      <div class="absolute inset-0 bg-blue-50 dark:bg-transparent"></div>
    </Fragment>
  </Content>

  <!-- Features3 Widget ************** -->
  <Features3
    title="Our Core Values"
    subtitle="The principles that guide our mission to transform field sales through AI intelligence."
    columns={3}
    isBeforeContent={true}
    items={[
      {
        title: 'Privacy First',
        description:
          'All conversation data is encrypted and stored securely. Reps control their data, and we never share sensitive information without explicit consent.',
        icon: 'tabler:shield-lock',
      },
      {
        title: 'Human-Centric AI',
        description:
          'AI should amplify human capabilities, not replace them. Our tools enhance sales conversations while keeping the human connection at the center.',
        icon: 'tabler:users',
      },
      {
        title: 'Field-Tested',
        description:
          'Every feature is built by people who have carried a bag, knocked doors, and closed deals. We understand the realities of field sales.',
        icon: 'tabler:target',
      },
    ]}
  />

  <!-- Features3 Widget ************** -->
  <Features3
    columns={3}
    isAfterContent={true}
    items={[
      {
        title: 'Continuous Learning',
        description:
          'Our AI models improve with every conversation, adapting to new objections, market conditions, and sales techniques.',
        icon: 'tabler:brain',
      },
      {
        title: 'Ethical AI',
        description:
          'We believe in transparent, fair AI that helps sales teams succeed without compromising integrity or customer trust.',
        icon: 'tabler:balance',
      },
      {
        title: 'Industry Focus',
        description:
          'Deep specialization in high-trust verticals like solar, roofing, and security where relationships matter most.',
        icon: 'tabler:building',
      },
      {
        title: 'Real-Time Impact',
        description:
          'Our tools provide immediate value during live conversations, not just post-call analysis.',
        icon: 'tabler:clock',
      },
      {
        title: 'Scalable Intelligence',
        description:
          'From individual reps to enterprise sales organizations, our platform grows with your team.',
        icon: 'tabler:trending-up',
      },
      {
        title: 'AGI-Ready',
        description:
          'Built with the future in mind, our data vault and training pipelines are designed for the AGI era.',
        icon: 'tabler:rocket',
      },
    ]}
    image={{
      src: '/press-kit/product/salestag-app-ui.png',
      alt: 'SalesTag Application Interface',
    }}
  />

  <!-- Steps2 Widget ****************** -->
  <Steps2
    title="Our Journey"
    subtitle="From field sales challenges to AI-powered solutions"
    items={[
      {
        title: 'Field Sales Reality',
        description:
          'Our founders spent years in door-to-door sales, experiencing firsthand the lack of structured feedback and coaching tools available to field reps.',
      },
      {
        title: 'AI Breakthrough',
        description:
          'The emergence of advanced LLMs created an opportunity to finally analyze and understand sales conversations at scale.',
      },
      {
        title: 'SalesTag Launch',
        description:
          'We built the first AI-powered wearable badge specifically designed for field sales teams, combining hardware innovation with intelligent software.',
      },
    ]}
  />

  <!-- Testimonials Widget *********** -->
  <Testimonials
    title="What our team believes"
    testimonials={[
      {
        testimonial: `Every sales conversation is a goldmine of insights waiting to be discovered. Our job is to help sales teams unlock that potential.`,
        name: 'Avery Kim',
        job: 'Co-Founder & CEO, SalesTag',
        image: {
          src: '/press-kit/founders/avery-kim.jpg',
          alt: 'Avery Kim',
        },
      },
      {
        testimonial: `Field sales is the most challenging form of selling. If we can solve it here, we can solve it anywhere. That's why we're focused on the frontlines.`,
        name: 'Will Sargent',
        job: 'Co-Founder & CTO, SalesTag',
        image: {
          src: '/press-kit/founders/will-sargent.jpg',
          alt: 'Will Sargent',
        },
      },
    ]}
  />

  <!-- Steps2 Widget ****************** -->
  <Steps2
    title="Our Achievements"
    subtitle="Milestones in transforming field sales through AI innovation"
    isReversed={true}
    callToAction={{
      text: 'Join our mission',
      href: '/subscribe',
    }}
    items={[
      {
        title: '10,000+ Conversations Captured',
        description: 'Our platform has successfully recorded and analyzed over 10,000 real sales conversations across multiple industries.',
        icon: 'tabler:microphone',
      },
      {
        title: '23% Average Close Rate Improvement',
        description:
          'Sales teams using SalesTag see significant improvements in their conversion rates within 90 days of implementation.',
        icon: 'tabler:trending-up',
      },
      {
        title: 'Industry Recognition',
        description:
          'Featured in leading sales and AI publications as an innovative solution for field sales intelligence.',
        icon: 'tabler:award',
      },
    ]}
  />

  <!-- Features2 Widget ************** -->
  <Features2
    title="Get in Touch"
    tagline="Contact SalesTag"
    columns={2}
    items={[
      {
        title: 'Schedule a Demo',
        description:
          'See SalesTag in action with a personalized demonstration of our AI-powered sales intelligence platform.',
        icon: 'tabler:calendar',
      },
      {
        title: 'Join Our Waitlist',
        description:
          'Be among the first to access SalesTag when we launch. Get early access to transform your sales process.',
        icon: 'tabler:rocket',
      },
    ]}
  />
</Layout>
