---
import CallToAction from '~/components/widgets/CallToAction.astro';
import Content from '~/components/widgets/Content.astro';
import Features2 from '~/components/widgets/Features2.astro';
import Features from '~/components/widgets/Features.astro';
import Hero from '~/components/widgets/Hero.astro';
import Testimonials from '~/components/widgets/Testimonials.astro';
import Steps from '~/components/widgets/Steps.astro';
import Layout from '~/layouts/PageLayout.astro';
import SeoMeta from '~/components/common/SeoMeta.astro';

import heroImage from '~/assets/images/hero-image.png';

const metadata = {
  title: 'SalesTag Services – AI Sales Intelligence Solutions',
};
---

<SeoMeta 
  title="SalesTag Services – AI Sales Intelligence & Coaching Solutions"
  description="Explore SalesTag's comprehensive AI-powered sales services: conversation capture, intelligent tagging, performance analytics, and coaching solutions for field sales teams."
  url="https://salestag.io/services"
  image="/og/services.jpg"
  schemaType="WebPage"
/>

<Layout metadata={metadata}>
  <!-- Hero Widget ******************* -->
  <Hero
    tagline="Services"
    title="Complete AI Sales Intelligence Solutions"
    subtitle="From conversation capture to performance coaching, SalesTag provides end-to-end AI-powered services to transform your field sales operations."
    actions={[{ variant: 'primary', text: 'Explore Solutions', href: '#services' }]}
    image={{
      src: '/press-kit/product/salestag-app-ui.png',
      alt: 'SalesTag AI Sales Intelligence Platform',
    }}
  />

  <!-- Features2 Widget ************** -->
  <Features2
    id="services"
    title="Our Core Services"
    subtitle="Comprehensive AI-powered solutions designed specifically for field sales teams."
    columns={3}
    items={[
      {
        title: 'Conversation Capture',
        description:
          'Professional-grade wearable badges that seamlessly record sales conversations without interrupting your natural flow. All-day battery life and automatic cloud sync.',
        icon: 'tabler:microphone',
      },
      {
        title: 'AI-Powered Analysis',
        description:
          'Advanced LLM processing to identify objections, buying signals, emotional tone, and key conversation moments. Real-time insights during live calls.',
        icon: 'tabler:brain',
      },
      {
        title: 'Performance Coaching',
        description: 
          'Personalized coaching recommendations based on conversation analysis. Identify improvement areas and replicate successful patterns across your team.',
        icon: 'tabler:users',
      },
      {
        title: 'Sales Analytics',
        description:
          'Comprehensive dashboards tracking close rates, objection patterns, and rep performance. Turn conversations into actionable business intelligence.',
        icon: 'tabler:chart-line',
      },
      {
        title: 'Custom Training',
        description:
          'Industry-specific AI models trained on your vertical. Specialized objection handling for solar, roofing, security, and other high-trust sales environments.',
        icon: 'tabler:school',
      },
      {
        title: 'Data Vault Services',
        description:
          'Secure, encrypted storage of all conversation data with enterprise-grade compliance. Perfect for regulatory requirements and future AI training.',
        icon: 'tabler:shield-lock',
      },
    ]}
  />

  <!-- Content Widget **************** -->
  <Content
    isReversed
    items={[
      {
        title: 'Real-Time Intelligence',
        description:
          'Get instant feedback during live conversations to help reps navigate objections and close more deals.',
        icon: 'tabler:clock',
      },
      {
        title: 'Industry Specialization',
        description:
          'Pre-trained models for solar, roofing, security, and other verticals where trust and relationships matter most.',
        icon: 'tabler:building',
      },
      {
        title: 'Privacy-First Design',
        description:
          'Enterprise-grade encryption and data controls ensure your sensitive sales conversations remain secure and compliant.',
        icon: 'tabler:shield-check',
      },
      {
        title: 'Seamless Integration',
        description:
          'Works with your existing CRM and sales tools. No disruption to current workflows or processes.',
        icon: 'tabler:plug',
      },
    ]}
    image={{
      src: '/press-kit/product/salestag-badge.png',
      alt: 'SalesTag Wearable Badge Technology',
    }}
  >
    <Fragment slot="content">
      <h3 class="text-2xl font-bold tracking-tight dark:text-white sm:text-3xl mb-2">Platform Features</h3>
    </Fragment>
  </Content>

  <!-- Features Widget *************** -->
  <Features
    title="Why Choose SalesTag Services?"
    subtitle="Built by field sales veterans who understand the unique challenges of door-to-door and consultative selling."
    items={[
      {
        title: 'Field-Tested Technology',
        description:
          'Our hardware and software are designed for real-world sales environments, from Arizona heat to Minnesota snow.',
        icon: 'tabler:target',
      },
      {
        title: 'Proven ROI',
        description:
          'Average 23% improvement in close rates within 90 days. Track your investment with detailed performance metrics.',
        icon: 'tabler:trending-up',
      },
      {
        title: 'Expert Support',
        description:
          'Dedicated customer success team with actual field sales experience. We understand your challenges because we\'ve lived them.',
        icon: 'tabler:headset',
      },
      {
        title: 'Continuous Learning',
        description:
          'Our AI models improve with every conversation, adapting to new objections and market conditions automatically.',
        icon: 'tabler:refresh',
      },
    ]}
  />

  <!-- Steps Widget ****************** -->
  <Steps
    title="Our Service Process"
    tagline="How we transform your sales team"
    items={[
      {
        title: 'Discovery & Assessment',
        description: 'We analyze your current sales process, team structure, and specific industry challenges.',
        icon: 'tabler:search',
      },
      {
        title: 'Custom Configuration',
        description: 'Tailor our AI models and coaching frameworks to your specific vertical and sales methodology.',
        icon: 'tabler:settings',
      },
      {
        title: 'Team Training',
        description: 'Comprehensive onboarding for reps and managers on using SalesTag effectively.',
        icon: 'tabler:school',
      },
      {
        title: 'Deployment & Monitoring',
        description: 'Launch with full support and ongoing performance monitoring to ensure success.',
        icon: 'tabler:rocket',
      },
      {
        title: 'Optimization & Growth',
        description: 'Continuous refinement based on results and expanding to additional teams or use cases.',
        icon: 'tabler:chart-line',
      },
    ]}
    image={{
      src: '/press-kit/product/salestag-diagram.png',
      alt: 'SalesTag Implementation Process',
    }}
  />

  <!-- Content Widget **************** -->
  <Content
    isAfterContent
    items={[
      {
        title: 'Immediate Impact',
        description:
          'Start seeing improvements in rep performance within the first 30 days of implementation.',
        icon: 'tabler:bolt',
      },
      {
        title: 'Scalable Solutions',
        description:
          'From 5-person teams to enterprise organizations with hundreds of reps, our platform grows with you.',
        icon: 'tabler:trending-up',
      },
      {
        title: 'Compliance Ready',
        description:
          'SOC 2 certified with enterprise-grade security. Perfect for regulated industries and large organizations.',
        icon: 'tabler:certificate',
      },
      {
        title: 'Future-Proof Investment',
        description:
          'Built for the AGI era with extensible architecture that adapts to emerging AI capabilities.',
        icon: 'tabler:rocket',
      },
    ]}
    image={{
      src: heroImage,
      alt: 'SalesTag Success Metrics',
    }}
  >
    <Fragment slot="content">
      <h3 class="text-2xl font-bold tracking-tight dark:text-white sm:text-3xl mb-2">Service Benefits</h3>
    </Fragment>
  </Content>

  <!-- Testimonials Widget *********** -->
  <Testimonials
    title="Success Stories"
    testimonials={[
      {
        testimonial: `SalesTag transformed our solar sales operation. The AI coaching helped our reps handle price objections 40% better, and our close rate jumped from 18% to 28% in just two months.`,
        name: 'David Chen',
        job: 'VP Sales, SolarMax Energy',
        image: {
          src: 'https://images.unsplash.com/photo-1472099645785-5658abf4ff4e?ixlib=rb-4.0.3&ixid=M3wxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8fA%3D%3D&auto=format&fit=crop&w=774&q=80',
          alt: 'David Chen',
        },
      },
      {
        testimonial: `The real-time coaching is incredible. My reps get instant feedback on how to handle objections they've never heard before. It's like having a sales manager in their ear for every call.`,
        name: 'Maria Rodriguez',
        job: 'Sales Director, Apex Roofing',
        image: {
          src: 'https://images.unsplash.com/photo-1494790108755-2616b612b786?ixlib=rb-4.0.3&ixid=M3wxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8fA%3D%3D&auto=format&fit=crop&w=774&q=80',
          alt: 'Maria Rodriguez',
        },
      },
      {
        testimonial: `Finally, a tool built by people who understand field sales. The insights are actionable, the hardware is reliable, and our team actually wants to use it. ROI was clear within 60 days.`,
        name: 'James Wilson',
        job: 'Regional Manager, SecureHome',
        image: {
          src: 'https://images.unsplash.com/photo-1507003211169-0a1dd7228f2d?ixlib=rb-4.0.3&ixid=M3wxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8fA%3D%3D&auto=format&fit=crop&w=774&q=80',
          alt: 'James Wilson',
        },
      },
    ]}
    callToAction={{
      text: 'Read More Case Studies',
      href: '/use-cases',
      icon: 'tabler:chevron-right',
    }}
  />

  <!-- CallToAction Widget *********** -->
  <CallToAction
    actions={[
      {
        variant: 'primary',
        text: 'Schedule Consultation',
        href: '/demo',
      },
      {
        variant: 'secondary',
        text: 'Join Waitlist',
        href: '/subscribe',
      },
    ]}
    title="Ready to Transform Your Sales Process?"
    subtitle="Let's discuss how SalesTag's AI-powered services can improve your team's performance and close rates."
  />
</Layout>
